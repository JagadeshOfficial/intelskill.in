rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. Allow uploads to the 'resumes' folder for authenticated users (Tutor Applications)
    match /resumes/{fileName} {
      allow read, write: if request.auth != null;
    }

    // 2. Existing rule: Allow authenticated users to manage course content
    match /courses/{courseId}/batches/{batchId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // 3. Default: Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
